<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GoKart" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="android:statusBarColor">@color/primary_color</item>
    </style>

    <style name="Theme.GoKart" parent="Base.Theme.GoKart" />

    <style name="text_h1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:textSize">@dimen/size_22</item>
    </style>

    <style name="text_h1_bold" parent="text_h1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h2" parent="text_h1">
        <item name="android:textSize">@dimen/dimen_20</item>
    </style>

    <style name="text_h2_bold" parent="text_h2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h3" parent="text_h1">
        <item name="android:textSize">@dimen/size_18</item>
    </style>

    <style name="text_h3_bold" parent="text_h3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h4" parent="text_h1">
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="text_h4_bold" parent="text_h4">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h5" parent="text_h1">
        <item name="android:textSize">@dimen/size_14</item>
    </style>

    <style name="text_h5_bold" parent="text_h5">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h6" parent="text_h1">
        <item name="android:textSize">@dimen/size_12</item>
    </style>

    <style name="text_h6_bold" parent="text_h6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h7" parent="text_h1">
        <item name="android:textSize">@dimen/size_10</item>
    </style>

    <style name="roundPrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:background">@drawable/background_round_primary_button</item>
    </style>

    <style name="rattingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/style_ratting_bar</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">18dip</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">18dip</item>
    </style>

    <style name="saperator_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_a</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="customTextBox">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/black_e</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">@dimen/dimen_10</item>
        <item name="android:paddingEnd">@dimen/dimen_10</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>